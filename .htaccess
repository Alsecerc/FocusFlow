RewriteEngine On

# Set base directory (if your project is inside 'RWD_ASSIGNMENT/FocusFlow')
RewriteBase /RWD_ASSIGNMENT/FocusFlow/

# ðŸš« Block access to Landing_Page/Features
RewriteRule ^Landing_Page/Features$ - [F,L]

# âœ… Allow requests without .php (your other rules remain unchanged)
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.+)$ $1.php [L]

# ðŸ”„ Redirect users from .php URLs to clean URLs while keeping subdirectories
RewriteCond %{THE_REQUEST} "\s/([^?\s]+)\.php"
RewriteRule ^(.+)\.php$ /%1 [R=301,L]